  "license": "MIT",
  "scripts": {
    "build": "rimraf dist; yarn webpack",
    "serve": "webpack serve",
    "anvil": "anvil --config-out anvil.json",
    "configure": "node configure.js",
    "compile": "cd ../src; forge build --force --extra-output-files abi; cd ../src.js; yarn typechain --target=ethers-v6 --out-dir=./contracts ../src/out/**/{IERC20Metadata,LendingPlatform,Loan}.abi.json",
    "test": "cd ../src; forge test -vvvvv > test.log"
  },
  "dependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "antd": "^5.18.2",
    "antd-prompt": "^0.7.1",
    "encrypt-rsa": "^3.0.1",
    "error-polyfill": "^0.1.3",
    "ethers": "^6.13.1",
    "lodash-es": "^4.17.21",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.23.1",
    "react-visibility-sensor": "^5.1.1",
    "throw-expression": "^2.1.0",
    "typechain": "^8.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "css-loader": "^7.1.2",
    "glob": "^10.4.2",
    "handlebars": "^4.7.8",
    "metamocks": "^0.9.0",
